generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Workspace {
  id          String @id @default(uuid())
  workspaceOwner String  @unique
  title       String
  data        String?
  logo        String?
  bannerUrl   String?
  iconId      String
  inTrash     String?

  folder    Folder[]  

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Folder {
  id          String @id @default(uuid())
  workspaceOwner String  @unique
  title       String
  data        String?
  logo        String?
  bannerUrl   String?
  iconId      String
  inTrash     String?

  workspace   Workspace  @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  workspaceId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([workspaceId])
}
